@code{
    [Parameter] public int Width { get; set; }
    [Parameter] public int Height { get; set; }
    [Parameter] public State.Shape? This { get; set; }
    [Parameter] public Action OnClick { get; set; } = (() => { });
    [Parameter] public Func<State.Province, State.Color> ColorFn { get; set; } = ColorOf;
    static State.Color EmptyColor(State.Province prov) => prov is State.Sea ? new State.Color(20, 170, 255) : new State.Color(20, 20, 20);
    public static State.Color ColorOf(State.Province prov) => (prov.Army is State.PlayerArmy pl && (!(prov is State.Sea) || pl.Soldiers > 0) ? pl.Player.Color : EmptyColor(prov));
    string Fill => ColorFn(This!.Province).ToString();
    string Points => string.Join(" ", This!.Select(point => Width * point.x + "," + Height * point.y));
}
<polyline points="@Points" fill="@Fill" @onclick="OnClick" stroke="#00000030" stroke-width="0.5"></polyline>
@if(This!.Province is State.Sea)
{
    <polyline points="@Points" fill="#1099FF80" @onclick="OnClick"></polyline>
}